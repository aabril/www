@import '../bower_components/famous/core/famous.css'
@import 'css/_sprite'

body
  height: 100%
  background: black
#container
  display: flex



.splash-logo
  position: absolute
  display: block
  width: 200px
  height: 200px
  top: 50%
  left: 50%
  margin: -100px 0 0 -100px
  background: url('./content/images/logo.svg')
  background-size: 200px 200px
  @media (-webkit-min-device-pixel-ratio: 2), (min-resolution: 192dpi)
    width: 400px
    height: 400px
    margin: -200px 0 0 -200px
    background-size: 400px 400px

.logo
  position: absolute
  display: block
  width: 200px
  height: 200px
  background: url('./content/images/logo.svg')
  background-size: 200px 200px
  @media (-webkit-min-device-pixel-ratio: 2), (min-resolution: 192dpi)
    width: 400px !important
    height: 400px !important
    margin: -100px 0 0 -100px
    background-size: 400px 400px

#app
  flex: 1
  width: 33%
  height: 100%
  margin: 0 auto
  z-index: 1
  background-color: black
  @media (-webkit-min-device-pixel-ratio: 2), (min-resolution: 192dpi)
    display: table
    width: 100%
    height: 100%
    margin: 0


